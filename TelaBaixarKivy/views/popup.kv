<PopupDownload>:
    size_hint: .5, .6
    auto_dismiss: False
    title: root.titulo
    BoxLayout:
        id: box
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            Label:
                text: root.texto
            BoxLayout:
                orientation: 'vertical'
                id: down
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        id: textoTamanho
                        text: "Tamanho:"
                    Label:
                        id: tamanho
                        text: "0"
                    Label:
                        id: mb
                        text: "MB"
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: textoBaixado
                        text: "Baixado:"
                    Label:
                        id: baixado
                        text: "0"
                    Label:
                        id: mbps
                        text: "Mbps"
            BoxLayout:
                orientation: 'horizontal'
                ProgressBar:
                    id: barra
                    height: '48dp'
        Button:
            id: cancelar
            size_hint_y: None
            height: '50dp'
            text: 'Cancelar'
            on_release: root.cancelar()

<PopupProcura>:
    size_hint: .5, .5
    auto_dismiss: False
    title: root.titulo
    BoxLayout:
        id: box
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            Label:
                text: root.texto
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: "Paginas:"
                Label:
                    id: paginas
                    text: "0"
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: "Paginas Procuradas:"
                Label:
                    id: procuradas
                    text: "0"
            BoxLayout:
                orientation: 'horizontal'
                ProgressBar:
                    id: barra
                    height: '48dp'

<PopupFile>:
    size_hint: .6, .7
    auto_dismiss: False
    title: root.titulo
    BoxLayout:
        id: box
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: .9
            FileChooserIconView:
                id: fc
                show_hidden: False
                path: root.path
        BoxLayout:
            size_hint_y: .1
            Button:
                id: cancelar
                size_hint_y: None
                height: '35dp'
                text: root.textoBotao
                on_release: root.funcao(root)
            Button:
                id: selecionar
                size_hint_y: None
                height: '35dp'
                text: root.textoBotaoSel
                on_release: root.selecionar()