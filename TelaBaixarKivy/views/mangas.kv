<Mangas>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: .05
            Label:
                size_hint_x: .2
                text: 'Mang√°:'
            TextInput:
                id: texto
                size_hint_x: .6
            Button:
                id: buscar
                size_hint_x: .2
                text: 'Buscar'
                on_release: root.procurar()
        RecycleView:
            id: rv
            size_hint_y: .87
            scroll_type: ['bars', 'content']
            scroll_wheel_distance: dp(114)
            bar_width: dp(10)
            viewclass: 'Row'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)
        BoxLayout:
            size_hint_y: .08
            Button:
                id: atualizar
                text: 'Atualizar'
                on_release:
                    root.atualizar()
            Button:
                id: voltar
                text: 'Voltar'
                on_release:
                    app.root.current='downloader'